<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mymvc.dao.UserDao">
	<!-- 用户登录功能，返回User类对象 -->
	<select id="login" parameterType="mymvc.po.User"
		resultType="mymvc.po.User">
		select * from user where username = #{username} and password = #{password}
	</select>

	<select id="checkUsername" parameterType="String"
		resultType="mymvc.po.User">
		select * from user where username = #{username}
	</select>

	<insert id="regist" parameterType="mymvc.po.User">
		insert into user(id,username,password,nickname,email)
		values(null,#{username},#{password},#{nickname},#{email})
	</insert>
</mapper>